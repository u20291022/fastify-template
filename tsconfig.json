{
  "compilerOptions": {
    "incremental": true,

    "target": "es2022",
    "lib": ["ES2022"],
    "module": "node16",
    "moduleResolution": "node16",

    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": ".",

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowJs": false,
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "removeComments": true,
    "disableSourceOfProjectReferenceRedirect": true,

    "paths": {
      "@/*": ["./source/*"],
      "@/app/*": ["./source/app/*"],
      "@/app/hooks/*": ["./source/app/hooks/*"],
      "@/app/plugins/*": ["./source/app/plugins/*"],
      "@/app/routes/*": ["./source/app/routes/*"],
      "@/database/*": ["./source/database/*"],
      "@/enums/*": ["./source/enums/*"],
      "@/errors/*": ["./source/errors/*"],
      "@/schemas/*": ["./source/schemas/*"],
      "@/types/*": ["./source/types/*"],
      "@/utils/*": ["./source/utils/*"],
    }
  },
  "include": ["source/**/*", "tests/**/*"]
}
